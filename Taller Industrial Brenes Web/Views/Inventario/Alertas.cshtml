@model List<Taller_Industrial_Brenes_Web.Models.ProductoModel>

@{
    ViewData["Title"] = "Alertas de Stock Bajo";
}

<h2 class="mt-3 mb-4 text-danger">⚠ Productos con Stock Bajo</h2>

@if (!Model.Any())
{
    <div class="alert alert-success">No hay productos con bajo stock.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-warning">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Stock</th>
                <th>Precio (₡)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td class="text-danger fw-bold">@producto.Stock</td>
                    <td>@producto.Precio.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}

