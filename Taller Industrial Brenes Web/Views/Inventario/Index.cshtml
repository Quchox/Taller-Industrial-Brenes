@model List<Taller_Industrial_Brenes_Web.Models.ProductoModel>

@{
    ViewData["Title"] = "Inventario - Stock actual";
}

<h2 class="mt-3 mb-4">Stock de Productos</h2>

<a class="btn btn-outline-danger mb-3" asp-action="Alertas" asp-controller="Inventario">
    Ver Alertas de Stock Bajo
</a>
<a class="btn btn-primary mb-3 me-2" asp-action="Agregar" asp-controller="Inventario">Agregar Producto</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Stock</th>
            <th>Precio (₡)</th>
            <th>Acciones</th> <!-- Nueva columna -->
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Stock</td>
                <td>@producto.Precio.ToString("N2")</td>
                <td>
                    <form asp-action="Eliminar" method="post" style="display:inline;">
                        <input type="hidden" name="productoID" value="@producto.ProductoID" />
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal" data-producto-id="@producto.ProductoID">
                            Eliminar
                        </button>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formEliminar" asp-action="Eliminar" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro que deseas eliminar este producto?
                </div>
                <input type="hidden" id="productoIDModal" name="productoID" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        var modalEliminar = document.getElementById('confirmarEliminarModal');
        modalEliminar.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var productoID = button.getAttribute('data-producto-id');
            document.getElementById('productoIDModal').value = productoID;
        });
    </script>
}



