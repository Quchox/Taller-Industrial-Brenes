@model Taller_Industrial_Brenes_Web.Models.ProductoModel

@{
    ViewData["Title"] = "Agregar Producto";
}

<h2 class="mt-3 mb-4">Agregar Nuevo Producto</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Agregar" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" type="number" min="0" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Precio (₡)</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Registrar Producto</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

