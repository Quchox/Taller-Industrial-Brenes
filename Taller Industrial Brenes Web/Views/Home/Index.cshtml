@{
    ViewData["Title"] = "Inicio";
}

<style>
    .main-bg {
        background: linear-gradient(rgba(255,255,255,0.5), rgba(255,255,255,0.5)), url('/images/fondo.jpg') no-repeat center center fixed;
        background-size: cover;
        border-radius: 16px;
        box-shadow: 0 0 24px 0 rgba(0,0,0,0.08);
        padding: 2rem;
    }

</style>

<div class="container py-5">
    <div class="main-bg">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 text-center">
                <h1 class="display-3 fw-bold mb-3" style="color: #2d3436;">
                    <i class="bi bi-gear-fill me-2" style="color: #0984e3;"></i>
                    Taller Industrial Brenes
                </h1>
                <p class="lead fw-normal mb-4" style="color: #2d3436;">
                    Bienvenido al sistema de gestión del taller industrial. Administra horarios, asistencia y más de forma sencilla y eficiente.
                </p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check display-4 mb-3" style="color: #00b894;"></i>
                        <h5 class="card-title mb-2">Horarios</h5>
                        <p class="card-text mb-3">Consulta y administra los horarios de trabajo del personal.</p>
                        <a class="btn btn-success w-100" asp-controller="Horarios" asp-action="Index">
                            Ver Horarios
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-person-check display-4 mb-3" style="color: #0984e3;"></i>
                        <h5 class="card-title mb-2">Asistencia</h5>
                        <p class="card-text mb-3">Marca tu asistencia diaria o revisa tu historial fácilmente.</p>
                        <a asp-controller="Asistencia" asp-action="Marcar" class="btn btn-primary w-100 mb-2">
                            Marcar Asistencia
                        </a>
                        <a asp-controller="Asistencia" asp-action="Historial" class="btn btn-outline-dark w-100">
                            Ver Historial
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
