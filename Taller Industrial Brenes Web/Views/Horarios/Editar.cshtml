@model Taller_Industrial_Brenes_Web.Models.HorarioModel

<h2 class="mb-4">Editar Horario</h2>

<form asp-action="Editar" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <!-- Muestra aquí errores globales -->
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <!-- IMPORTANTE: oculta el ID para que el POST lo reciba -->
    <input asp-for="HorarioID" type="hidden" />
    <input asp-for="UsuarioID" type="hidden" />

    <div class="col-md-4">
        <label asp-for="DiaSemana" class="form-label">Día de la semana</label>
        <select asp-for="DiaSemana" class="form-select">
            <option value="">-- Selecciona un día --</option>
            <option>Lunes</option>
            <option>Martes</option>
            <option>Miércoles</option>
            <option>Jueves</option>
            <option>Viernes</option>
            <option>Sábado</option>
            <option>Domingo</option>
        </select>
        <span asp-validation-for="DiaSemana" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="HoraInicio" class="form-label">Hora inicio</label>
        <input asp-for="HoraInicio" type="time" class="form-control" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="HoraFin" class="form-label">Hora fin</label>
        <input asp-for="HoraFin" type="time" class="form-control" />
        <span asp-validation-for="HoraFin" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Observaciones" class="form-label">Observaciones</label>
        <textarea asp-for="Observaciones" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex justify-content-end">
        <a asp-action="Administrar" class="btn btn-secondary me-2">Cancelar</a>
        <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
