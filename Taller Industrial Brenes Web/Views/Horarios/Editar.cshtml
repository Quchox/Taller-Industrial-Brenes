
@model Taller_Industrial_Brenes_Web.Models.HorarioModel

@{
    ViewData["Title"] = "Editar Horario";
}

<h2>Editar Horario</h2>

<form asp-action="Editar">
    <input type="hidden" asp-for="HorarioID" />
    <div class="form-group">
        <label asp-for="UsuarioID"></label>
        <input asp-for="UsuarioID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DiaSemana"></label>
        <input asp-for="DiaSemana" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HoraInicio"></label>
        <input asp-for="HoraInicio" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="HoraFin"></label>
        <input asp-for="HoraFin" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="Observaciones"></label>
        <input asp-for="Observaciones" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Actualizar</button>
</form>
