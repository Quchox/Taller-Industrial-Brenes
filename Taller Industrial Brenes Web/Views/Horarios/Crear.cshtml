@model Taller_Industrial_Brenes_Web.Models.HorarioModel

@{
    ViewData["Title"] = "Crear Horario";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-calendar-plus me-2"></i>Crear Horario
            </div>
            <div class="card-body">
                <form asp-action="Crear">
                    <div class="mb-3">
                        <label asp-for="UsuarioID" class="form-label"></label>
                        <input asp-for="UsuarioID" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="DiaSemana" class="form-label"></label>
                        <input asp-for="DiaSemana" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="HoraInicio" class="form-label"></label>
                        <input asp-for="HoraInicio" class="form-control" type="time" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="HoraFin" class="form-label"></label>
                        <input asp-for="HoraFin" class="form-control" type="time" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label"></label>
                        <input asp-for="Observaciones" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Administrar" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
