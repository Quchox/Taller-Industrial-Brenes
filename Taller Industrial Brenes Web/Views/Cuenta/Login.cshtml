@model Taller_Industrial_Brenes_Web.Models.LoginRequestModel
@{
    ViewData["Title"] = "Iniciar Sesión";

    Layout = "_LayoutExterno";
}

<body class="bg-gradient-primary">
    <div class="container">

        <div class="row d-flex justify-content-center align-items-center vh-100">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-lg-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image" style="background-image: url('/img/backgrounds/Imagen1.jpg');"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>

                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                                    }

                                    <form asp-action="Login" asp-controller="Cuenta" method="post">
                                        <div class="form-group">
                                            <input asp-for="Correo" class="form-control form-control-user" placeholder="Enter Email Address..." />
                                            <span asp-validation-for="Correo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Contrasenna" type="password" class="form-control form-control-user" placeholder="Password" />
                                            <span asp-validation-for="Contrasenna" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Autenticacion" asp-action="RecuperarContrasenna">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Cuenta" asp-action="Registro">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
