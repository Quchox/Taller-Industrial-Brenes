          },
          "Descripcion": {
            "type": "string",
            "nullable": true
          },
          "Stock": {
            "type": "integer",
            "format": "int32"
          },
          "Precio": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "RolModel": {
        "type": "object",
        "properties": {
          "UsuarioID": {
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "UsuarioModel": {
        "type": "object",
        "properties": {
          "UsuarioID": {
            "type": "integer",
            "format": "int64"
          },
          "Identificacion": {
            "type": "string",
            "nullable": true
          },
          "Nombre": {
            "type": "string",
            "nullable": true
          },
          "ApellidoPaterno": {
            "type": "string",
            "nullable": true
          },
          "ApellidoMaterno": {
            "type": "string",
            "nullable": true
          },
          "Correo": {
            "type": "string",
            "nullable": true
          },
          "Contrasenna": {
            "type": "string",
            "nullable": true
          },
          "TieneContrasennaTemp": {
            "type": "boolean",
            "nullable": true
          },
          "FechaVencimientoTemp": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "Estado": {
            "type": "boolean"
          },
          "RolID": {
            "type": "integer",
            "format": "int64"
          },
          "Token": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
