  "components": {
    "schemas": {
      "HorarioModel": {
        "required": [
          "DiaSemana",
          "HoraFin",
          "HoraInicio",
          "UsuarioID"
        ],
        "type": "object",
        "properties": {
          "HorarioID": {
            "type": "integer",
            "format": "int32"
          },
          "UsuarioID": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "DiaSemana": {
            "minLength": 1,
            "pattern": "^(Lunes|Martes|Miércoles|Miercoles|Jueves|Viernes|Sábado|Sabado|Domingo)$",
            "type": "string"
          },
          "HoraInicio": {
            "type": "string",
            "format": "date-span"
          },
          "HoraFin": {
            "type": "string",
            "format": "date-span"
          },
          "Observaciones": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequestModel": {
        "type": "object",
        "properties": {
